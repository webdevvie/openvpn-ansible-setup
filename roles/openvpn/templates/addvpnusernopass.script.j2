cd /etc/openvpn/easy-rsa/2.0/


if [ $# -eq 0 ]
  then
    echo "No arguments supplied"
    exit 1
fi


if [ -z "$1" ]
  then
    echo "Please add a name for certificate"
fi


echo "Generating user keys for $1"
echo "You will be asked to supply a password"
. ./vars

export KEY_CN=$1
./pkitool $1
